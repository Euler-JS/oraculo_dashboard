        {
          "id": "help-center",
          "type": "link",
          "label": "Help Center",
          "icon": "help-circle",
          "route": "/help"
        },
        {
          "id": "settings",
          "type": "link",
          "label": "Settings",
          "icon": "settings",
          "route": "/settings"
        },
        {
          "id": "sign-out",
          "type": "link",
          "label": "Sign Out",
