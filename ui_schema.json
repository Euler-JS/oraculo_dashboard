            {
              "id": "attendance",
              "label": "Attendance",
              "icon": "check-circle",
              "route": "/attendance",
              "active": true
            },
            {
              "id": "report",
              "label": "Report",
              "icon": "bar-chart",
              "route": "/report",
              "badge": "+",
              "active": false
